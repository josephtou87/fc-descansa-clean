{
  "version": 2,
  "name": "fc-descansa-website",
  "outputDirectory": ".",
  "installCommand": "npm ci --only=production",
  "buildCommand": "echo 'Static site - no build needed'",
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "functions": {
    "api/*.js": {
      "maxDuration": 30
    }
  }
}
